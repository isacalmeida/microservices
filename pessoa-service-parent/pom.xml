<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>br.edu.unoesc.sistemautils.base</groupId>
		<artifactId>sistema-utils-base</artifactId>
		<version>1.0.0</version>
	</parent>

	<groupId>br.edu.unoesc.pessoaservice</groupId>
	<artifactId>pessoa-service-parent</artifactId>
	<packaging>pom</packaging>

	<modules>
		<module>pessoa-service-application</module>
		<module>pessoa-service-business</module>
		<module>pessoa-service-business-common</module>
		<module>pessoa-service-common</module>
		<module>pessoa-service-persistence</module>
		<module>pessoa-service-restapi</module>
		<module>pessoa-service-restapi-common</module>
		<module>pessoa-service-web</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<artifactId>pessoa-service-application</artifactId>
				<groupId>br.edu.unoesc.pessoaservice.application</groupId>
				<version>${pessoa-service.version}</version>
				<type>jar</type>
			</dependency>
			<dependency>
				<artifactId>pessoa-service-business</artifactId>
				<groupId>br.edu.unoesc.pessoaservice.business</groupId>
				<version>${pessoa-service.version}</version>
				<type>jar</type>
			</dependency>
			<dependency>
				<artifactId>pessoa-service-business-common</artifactId>
				<groupId>br.edu.unoesc.pessoaservice.business.common</groupId>
				<version>${pessoa-service.version}</version>
				<type>jar</type>
			</dependency>
			<dependency>
				<artifactId>pessoa-service-common</artifactId>
				<groupId>br.edu.unoesc.pessoaservice.common</groupId>
				<version>${pessoa-service.version}</version>
				<type>jar</type>
			</dependency>
			<dependency>
				<artifactId>pessoa-service-persistence</artifactId>
				<groupId>br.edu.unoesc.pessoaservice.persistence</groupId>
				<version>${pessoa-service.version}</version>
				<type>jar</type>
			</dependency>
			<dependency>
				<artifactId>pessoa-service-restapi</artifactId>
				<groupId>br.edu.unoesc.pessoaservice.restapi</groupId>
				<version>${pessoa-service.version}</version>
				<type>jar</type>
			</dependency>
			<dependency>
				<artifactId>pessoa-service-restapi-common</artifactId>
				<groupId>br.edu.unoesc.pessoaservice.restapi.common</groupId>
				<version>${pessoa-service.version}</version>
				<type>jar</type>
			</dependency>
			<dependency>
				<artifactId>pessoa-service-web</artifactId>
				<groupId>br.edu.unoesc.pessoaservice.web</groupId>
				<version>${pessoa-service.version}</version>
				<type>jar</type>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<index>${jar-index.properties}</index>
						<manifest>
							<mainClass>${pessoa-service.main-class}</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
